<UserControl x:Class="ControlPenales.CreacionGruposView"
             x:Name="CreacionProgramasWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             xmlns:local="clr-namespace:ControlPenales"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d"
             d:DesignHeight="880"
             d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CreacionProgramasLoading}"
                                   CommandParameter="{Binding ElementName=CreacionProgramasWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <local:MultiValueConverter x:Key="MultiParamConverter"></local:MultiValueConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <local:MenuCatalogosView />
        <Controls:MetroAnimatedSingleRowTabControl Grid.Row="1"
                                                   HorizontalAlignment="Stretch"
                                                   TabStripPlacement="Top"
                                                   Height="auto"
                                                   Name="TabCreacionGrupo">
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding TabChange }"  PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <TabItem Header="Modelo"
                     Style="{StaticResource HeaderTabStyle}"
                     IsSelected="{Binding SelectedTab}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Creación de Grupos"
                           Style="{DynamicResource DescriptionHeaderStyle}" />
                    <GroupBox Grid.Row="1"
                              Header="Seleccione Filtros"
                              Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".02*"></ColumnDefinition>
                                <ColumnDefinition Width=".12*"></ColumnDefinition>
                                <ColumnDefinition Width=".05*"></ColumnDefinition>
                                <ColumnDefinition Width=".12*"></ColumnDefinition>
                                <ColumnDefinition Width=".05*"></ColumnDefinition>
                                <ColumnDefinition Width=".12*"></ColumnDefinition>
                                <ColumnDefinition Width=".04*"></ColumnDefinition>
                                <ColumnDefinition Width=".12*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="EJE"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      Height="25"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding ListEjes}"
                                      SelectedValuePath="ID_EJE"
                                      DisplayMemberPath="DESCR"
                                      SelectedValue="{Binding SelectedEje}"
                                      IsEnabled="{Binding EjeEnabled}" />
                            <TextBlock Grid.Column="2"
                                       Text="PROGRAMA"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <ComboBox Grid.Column="3"
                                      Height="25"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding ListProgramas}"
                                      SelectedValuePath="ID_TIPO_PROGRAMA"
                                      DisplayMemberPath="NOMBRE"
                                      SelectedValue="{Binding SelectedPrograma}"
                                      IsEnabled="{Binding ProgramaEnabled}" />
                            <TextBlock Grid.Column="4"
                                       Text="ACTIVIDAD"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <ComboBox Grid.Column="5"
                                      Height="25"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding ListActividades}"
                                      SelectedValuePath="ID_ACTIVIDAD"
                                      DisplayMemberPath="DESCR"
                                      SelectedValue="{Binding SelectedActividad}"
                                      IsEnabled="{Binding ActividadEnabled}" />
                            <TextBlock Grid.Column="6"
                                       Text="GRUPO"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <ComboBox Grid.Column="7"
                                      Height="25"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding ListGrupo}"
                                      SelectedValuePath="ID_GRUPO"
                                      DisplayMemberPath="DESCR"
                                      SelectedItem="{Binding SelectedGrupo}"
                                      IsEnabled="{Binding EnabledEditGrupo}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Name="GB_CrearGrupo"
                              Grid.Row="2"
                              Header="Crear Grupo"
                              IsEnabled="{Binding EnabledPanelCrearGrupo}"
                              Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".667*" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="NOMBRE DEL GRUPO"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Column="0"
                                     Grid.Row="1"
                                     Text="{Binding GrupoDescripcion,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,ValidatesOnDataErrors=True}"
                                     CharacterCasing="Upper"
                                     VerticalAlignment="Center"
                                     MaxLength="70" />
                            <Grid Grid.Row="2"
                                  Grid.ColumnSpan="2"
                                  Visibility="{Binding PanelUpdate}"
                                  HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="{Binding RowDomingo}" />
                                    <RowDefinition Height="{Binding RowLunes}" />
                                    <RowDefinition Height="{Binding RowMartes}" />
                                    <RowDefinition Height="{Binding RowMiercoles}" />
                                    <RowDefinition Height="{Binding RowJueves}" />
                                    <RowDefinition Height="{Binding RowViernes}" />
                                    <RowDefinition Height="{Binding RowSabado}" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="FECHA DE INICIO"
                                               VerticalAlignment="Center" />
                                    <DatePicker Name="FechaInicio"
                                                Grid.Row="1"
                                                DisplayDateStart="{Binding FechaServer,Mode=TwoWay}"
                                                SelectedDate="{Binding FechaInicio}" />
                                    <TextBlock Grid.Column="2"
                                               Text="FECHA DE TERMINACIÓN"
                                               VerticalAlignment="Center" />
                                    <DatePicker Name="FechaFinal"
                                                Grid.Column="2"
                                                DisplayDateStart="{Binding FechaServer,Mode=TwoWay}"
                                                Grid.Row="1"
                                                SelectedDate="{Binding FechaFin,ValidatesOnDataErrors=True}" />
                                </Grid>
                                <TextBlock Grid.Row="2"
                                           Grid.ColumnSpan="6"
                                           Text="RECURRENCIA"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"
                                           Background="#427399"
                                           Foreground="WhiteSmoke" />
                                <StackPanel Grid.Row="3"
                                            Grid.ColumnSpan="4"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            Margin="0,5,0,5">
                                    <CheckBox Name="Dom"
                                              Content="DOMINGO"
                                              Tag="D"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckDomingo}" />
                                    <CheckBox Name="Lun"
                                              Content="LUNES"
                                              Tag="L"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckLunes}" />
                                    <CheckBox Name="Mar"
                                              Content="MARTES"
                                              Tag="Ma"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckMartes}" />
                                    <CheckBox Name="Mie"
                                              Content="MIÉRCOLES"
                                              Tag="Mi"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckMiercoles}" />
                                    <CheckBox Name="Jue"
                                              Content="JUEVES"
                                              Tag="J"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckJueves}" />
                                    <CheckBox Name="Vie"
                                              Content="VIERNES"
                                              Tag="V"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckViernes}" />
                                    <CheckBox Name="Sab"
                                              Content="SÁBADO"
                                              Tag="S"
                                              Margin="0,0,10,0"
                                              IsChecked="{Binding CheckSabado}" />
                                </StackPanel>
                                <Border Grid.Row="4"
                                        Grid.ColumnSpan="6"
                                        HorizontalAlignment="Stretch"
                                        BorderThickness="8"
                                        BorderBrush="#427399"
                                        VerticalAlignment="Top" />
                                <TextBlock Grid.Row="4"
                                           Text="DIA"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke" />
                                <TextBlock Grid.Row="4"
                                           Grid.Column="1"
                                           Text="HORA INICIO"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke" />
                                <TextBlock Grid.Row="4"
                                           Grid.Column="2"
                                           Text="HORA FIN"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke" />
                                <TextBlock Grid.Row="4"
                                           Grid.Column="4"
                                           Grid.ColumnSpan="6"
                                           HorizontalAlignment="Stretch"
                                           Text="LUGAR"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke" />
                                <TextBlock Grid.Row="5"
                                           Text="DOMINGO"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityDomingo}" />
                                <xctk:DateTimeUpDown Name="InicioDiaDomingo"
                                                     Grid.Column="1"
                                                     Grid.Row="5"
                                                     IsEnabled="{Binding CheckDomingo,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaDomingo,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityDomingo}" />
                                <xctk:DateTimeUpDown Name="FinDiaDomingo"
                                                     Grid.Column="2"
                                                     Grid.Row="5"
                                                     IsEnabled="{Binding CheckDomingo,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaDomingo,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityDomingo}" />
                                <ComboBox Grid.Row="5"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckDomingo,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaDomingo,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="5"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateDomingo,UpdateSourceTrigger=PropertyChanged}"
                                           Visibility="{Binding ShowMarkErrorDomingo}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="6"
                                           Text="LUNES"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityLunes}" />
                                <xctk:DateTimeUpDown Name="InicioDiaLunes"
                                                     Grid.Column="1"
                                                     Grid.Row="6"
                                                     IsEnabled="{Binding CheckLunes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaLunes,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityLunes}" />
                                <xctk:DateTimeUpDown Name="FinDiaLunes"
                                                     Grid.Column="2"
                                                     Grid.Row="6"
                                                     IsEnabled="{Binding CheckLunes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaLunes,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityLunes}" />
                                <ComboBox Grid.Row="6"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckLunes,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaLunes,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="6"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateLunes}"
                                           Visibility="{Binding ShowMarkErrorLunes}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="7"
                                           Text="MARTES"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityMartes}" />
                                <xctk:DateTimeUpDown Name="InicioDiaMartes"
                                                     Grid.Column="1"
                                                     Grid.Row="7"
                                                     IsEnabled="{Binding CheckMartes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaMartes,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityMartes}" />
                                <xctk:DateTimeUpDown Name="FinDiaMartes"
                                                     Grid.Column="2"
                                                     Grid.Row="7"
                                                     IsEnabled="{Binding CheckMartes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaMartes,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityMartes}" />
                                <ComboBox Grid.Row="7"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckMartes,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaMartes,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="7"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateMartes}"
                                           Visibility="{Binding ShowMarkErrorMartes}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="8"
                                           Text="MIÉRCOLES"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityMiercoles}" />
                                <xctk:DateTimeUpDown Name="InicioDiaMiercoles"
                                                     Grid.Column="1"
                                                     Grid.Row="8"
                                                     IsEnabled="{Binding CheckMiercoles,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaMiercoles,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityMiercoles}" />
                                <xctk:DateTimeUpDown Name="FinDiaMiercoles"
                                                     Grid.Column="2"
                                                     Grid.Row="8"
                                                     IsEnabled="{Binding CheckMiercoles,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaMiercoles,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityMiercoles}" />
                                <ComboBox Grid.Row="8"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckMiercoles,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaMiercoles,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="8"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateMiercoles}"
                                           Visibility="{Binding ShowMarkErrorMiercoles}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="9"
                                           Text="JUEVES"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityJueves}" />
                                <xctk:DateTimeUpDown Name="InicioDiaJueves"
                                                     Grid.Column="1"
                                                     Grid.Row="9"
                                                     IsEnabled="{Binding CheckJueves,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaJueves,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityJueves}" />
                                <xctk:DateTimeUpDown Name="FinDiaJueves"
                                                     Grid.Column="2"
                                                     Grid.Row="9"
                                                     IsEnabled="{Binding CheckJueves,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaJueves,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityJueves}" />
                                <ComboBox Grid.Row="9"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckJueves,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaJueves,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="9"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateJueves}"
                                           Visibility="{Binding ShowMarkErrorJueves}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="10"
                                           Text="VIERNES"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilityViernes}" />
                                <xctk:DateTimeUpDown Name="InicioDiaViernes"
                                                     Grid.Column="1"
                                                     Grid.Row="10"
                                                     IsEnabled="{Binding CheckViernes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaViernes,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityViernes}" />
                                <xctk:DateTimeUpDown Name="FinDiaViernes"
                                                     Grid.Column="2"
                                                     Grid.Row="10"
                                                     IsEnabled="{Binding CheckViernes,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaViernes,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityViernes}" />
                                <ComboBox Grid.Row="10"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckViernes,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaViernes,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="10"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateViernes}"
                                           Visibility="{Binding ShowMarkErrorViernes}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="11"
                                           Text="SÁBADO"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilitySabado}" />
                                <xctk:DateTimeUpDown Name="InicioDiaSabado"
                                                     Grid.Column="1"
                                                     Grid.Row="11"
                                                     IsEnabled="{Binding CheckSabado,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaSabado,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilitySabado}" />
                                <xctk:DateTimeUpDown Name="FinDiaSabado"
                                                     Grid.Column="2"
                                                     Grid.Row="11"
                                                     IsEnabled="{Binding CheckSabado,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaSabado,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilitySabado}" />
                                <ComboBox Grid.Row="11"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckSabado,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaSabado,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="11"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateSabado}"
                                           Visibility="{Binding ShowMarkErrorSabado}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <Border Grid.Row="12"
                                        Grid.ColumnSpan="6"
                                        BorderThickness="3"
                                        BorderBrush="#427399"></Border>
                            </Grid>
                            <TextBlock Grid.Row="3"
                                       Text="RESPONSABLE DEL GRUPO"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                      ItemsSource="{Binding ListResponsable}"
                                      SelectedValuePath="ID_PERSONA"
                                      DisplayMemberPath="NOMBRE_COMPLETO"
                                      SelectedValue="{Binding SelectedResponsable,ValidatesOnDataErrors=True}"
                                      VerticalAlignment="Center"
                                      Margin="0,5,0,0" />
                            <TextBlock Grid.Row="5"
                                       Text="ESTATUS DEL GRUPO"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Row="6"
                                      ItemsSource="{Binding ListEstatus}"
                                      SelectedValuePath="ID_ESTATUS_GRUPO"
                                      DisplayMemberPath="DESCR"
                                      SelectedValue="{Binding SelectedEstatus,ValidatesOnDataErrors=True}"
                                      VerticalAlignment="Center"
                                      IsEnabled="{Binding EnabledEstatusGrupo}"
                                      Margin="0,5,0,0" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="3"
                              Header="Lista de Internos"
                              IsEnabled="{Binding EnabledListaHorario}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="{Binding EmpalmeHorarioNuevo}" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="*CREE UN HORARIO PARA HABILITAR LA LISTA DE INTERNOS"
                                       Visibility="{Binding IsUPanelUpdatepdate}"
                                       VerticalAlignment="Top"
                                       Foreground="#427399" />
                            <TextBlock Grid.Row="1"
                                       Text="SE ENCONTRO EMPALMES CON EL NUEVO HORARIO PROGRAMADO"
                                       Visibility="{Binding PanelUpdate}"
                                       VerticalAlignment="Top"
                                       Foreground="Red" />
                            <StatusBar Grid.Row="2"
                                       Background="#427399"
                                       MaxHeight="30"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Center"
                                       Width="300">
                                <Label Content="{Binding SelectedCountText}"
                                       Foreground="White"
                                       Margin="55,0,0,0"
                                       HorizontalContentAlignment="Center"
                                       HorizontalAlignment="Center" />
                            </StatusBar>
                            <ListBox Grid.Row="3"
                                     Name="List_Internos"
                                     ScrollViewer.CanContentScroll="False"
                                     ItemsSource="{Binding ListGrupoParticipante, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     SelectionMode="Single"
                                     MaxHeight="400"
                                     VerticalAlignment="Top"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectedItem="{Binding SelectedInterno,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Red"
                                                Margin="10,2,2,2"
                                                BorderThickness="{Binding ShowEmpalme,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                            <Grid Background="{Binding PLANIMETRIACOLOR}"
                                                  Margin="2,2,2,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
