                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaViernesCompl,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilityViernesCompl}" />
                                <xctk:DateTimeUpDown Grid.Column="2"
                                                     Grid.Row="10"
                                                     IsEnabled="{Binding CheckViernesCompl,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaViernesCompl,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilityViernesCompl}" />
                                <ComboBox Grid.Row="10"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckViernesCompl,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaViernesCompl,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="10"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateViernesCompl}"
                                           Visibility="{Binding ShowMarkErrorViernesCompl}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <TextBlock Grid.Row="11"
                                           Text="SÁBADO"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding VisibilitySabadoCompl}" />
                                <xctk:DateTimeUpDown Grid.Column="1"
                                                     Grid.Row="11"
                                                     IsEnabled="{Binding CheckSabadoCompl,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding InicioDiaSabadoCompl,UpdateSourceTrigger=LostFocus}"
                                                     Visibility="{Binding VisibilitySabadoCompl}" />
                                <xctk:DateTimeUpDown Grid.Column="2"
                                                     Grid.Row="11"
                                                     IsEnabled="{Binding CheckSabadoCompl,UpdateSourceTrigger=PropertyChanged}"
                                                     ShowButtonSpinner="False"
                                                     Format="Custom"
                                                     FormatString="HH:mm"
                                                     Value="{Binding FinDiaSabadoCompl,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"
                                                     Visibility="{Binding VisibilitySabadoCompl}" />
                                <ComboBox Grid.Row="11"
                                          Grid.Column="4"
                                          Height="25"
                                          IsEnabled="{Binding CheckSabadoCompl,UpdateSourceTrigger=PropertyChanged}"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding ListArea}"
                                          SelectedValuePath="ID_AREA"
                                          DisplayMemberPath="DESCR"
                                          SelectedValue="{Binding SelectedAreaSabadoCompl,ValidatesOnDataErrors=True}"
                                          HorizontalAlignment="Stretch"
                                          Grid.ColumnSpan="2" />
                                <TextBlock Grid.Row="11"
                                           Grid.Column="3"
                                           Text="{Binding FechaValidateSabadoCompl}"
                                           Visibility="{Binding ShowMarkErrorSabadoCompl}"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           Background="#DC000C" />
                                <Border Grid.Row="12"
                                        Grid.ColumnSpan="6"
                                        BorderThickness="3"
                                        BorderBrush="#427399"></Border>
                            </Grid>
                            <TextBlock Grid.Row="3"
                                       Text="RESPONSABLE DEL GRUPO"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Row="4"
                                      ItemsSource="{Binding ListResponsable}"
                                      SelectedValuePath="ID_PERSONA"
                                      DisplayMemberPath="NOMBRE_COMPLETO"
                                      SelectedValue="{Binding SelectedResponsableCompl,ValidatesOnDataErrors=True}"
                                      VerticalAlignment="Center"
                                      Margin="0,5,0,0" />
                            <TextBlock Grid.Row="5"
                                       Text="ESTATUS DEL GRUPO"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Row="6"
                                      ItemsSource="{Binding ListEstatus}"
                                      SelectedValuePath="ID_ESTATUS_GRUPO"
                                      DisplayMemberPath="DESCR"
                                      SelectedValue="{Binding SelectedEstatusCompl,ValidatesOnDataErrors=True}"
                                      VerticalAlignment="Center"
                                      IsEnabled="{Binding EnabledEstatusGrupoCompl}"
                                      Margin="0,5,0,0" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="3"
                              Header="Lista de Internos"
                              IsEnabled="{Binding EnabledListaHorarioCompl}"
                              Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="{Binding EmpalmeHorarioNuevoCompl}" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="*CREE UN HORARIO PARA HABILITAR LA LISTA DE INTERNOS"
                                       Visibility="{Binding IsUPanelUpdatepdateCompl}"
                                       VerticalAlignment="Top"
                                       Foreground="#427399"
                                       Grid.ColumnSpan="4" />
                            <TextBlock Grid.Row="1"
                                       Text="SE ENCONTRO EMPALMES CON EL NUEVO HORARIO PROGRAMADO"
                                       Visibility="{Binding PanelUpdateCompl}"
                                       VerticalAlignment="Top"
                                       Foreground="Red"
                                       Grid.ColumnSpan="4" />
                            <StatusBar Grid.Row="2"
                                       Background="#427399"
                                       MaxHeight="30"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Center"
                                       Width="300"
                                       Grid.ColumnSpan="4"
                                       Margin="39,0">
                                <Label Content="{Binding SelectedCountTextCompl}"
                                       Foreground="White"
                                       Margin="55,0,0,0"
                                       HorizontalContentAlignment="Center"
                                       HorizontalAlignment="Center" />
                            </StatusBar>
                            <Button Grid.Column="3"
                                    Grid.Row="3"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource AccentedSquareButtonStyle}"
                                    Width="150"
                                    Command="{Binding OnClick}"
                                    CommandParameter="VerSeleccionados"
                                    Height="28">Ver Seleccionados</Button>
                            <TextBlock Text="DELITO"
                                       Grid.Row="4" />
                            <ComboBox Grid.Row="5"
                                      ItemsSource="{Binding ListDelitosCompl}"
                                      SelectedValuePath="ID_DELITO"
                                      DisplayMemberPath="DESCR"
                                      SelectedValue="{Binding SelectedDelitoCompl}" />
                            <TextBlock Text="EDAD"
                                       Grid.Row="4"
                                       Grid.Column="1" />
                            <ComboBox Grid.Row="5"
                                      Grid.Column="1"
                                      ItemsSource="{Binding ListEdadesCompl}"
                                      SelectedValue="{Binding SelectedEdades}"
                                      SelectedValuePath="ID_EDAD"
                                      DisplayMemberPath="RANGO_EDAD" />
                            <TextBlock Text="PLANIMETRIA"
                                       Grid.Row="4"
                                       Grid.Column="2" />
                            <ComboBox Grid.Row="5"
                                      Grid.Column="2"
                                      ItemsSource="{Binding ListPlanimetriaCompl}"
                                      SelectedValuePath="ID_SECTOR_CLAS"
                                      DisplayMemberPath="POBLACION"
                                      SelectedValue="{Binding SelectedPlanimetriaCompl}" />
                            <TextBlock Text="AÑO"
                                       Grid.Row="4"
                                       Grid.Column="3" />
                            <ComboBox Grid.Row="5"
                                      Grid.Column="3"
                                      ItemsSource="{Binding ListPAniosCompl}"
                                      SelectedValue="{Binding SelectedAniosCompl}"
                                      SelectedValuePath="ID_ANIO"
                                      DisplayMemberPath="ANIO" />
                            <!--TODO: Frank este es el listbox que te digo que tarda mucho-->
                            <ListBox Name="List_InternosCompl"
                                     Grid.Row="6"
                                     ScrollViewer.CanContentScroll="False"
                                     ItemsSource="{Binding ListGrupoParticipanteCompl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     SelectionMode="Single"
                                     MaxHeight="400"
                                     VerticalAlignment="Top"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectedItem="{Binding SelectedInternoCompl}"
                                     Grid.ColumnSpan="4">
                                <i:Interaction.Triggers>
                                    <local:RoutedEventTrigger RoutedEvent="ScrollViewer.ScrollChanged">
                                        <cmd:EventToCommand Command="{Binding CargarMasResultados}"
                                                            PassEventArgsToCommand="True" />
                                    </local:RoutedEventTrigger>
                                </i:Interaction.Triggers>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Red"
                                                Margin="10,2,2,2"
                                                BorderThickness="{Binding ShowEmpalme,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                            <Grid Background="{Binding PLANIMETRIACOLOR}"
                                                  Margin="2,2,2,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <CheckBox Name="CB_CheckBox"
                                                          Margin="10,0,10,0"
                                                          IsChecked="{Binding elegido}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Checked">
                                                            <i:InvokeCommandAction Command="{Binding DataContext.CheckedCompl, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                                                <i:InvokeCommandAction.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiParamConverter}">
                                                                        <Binding />
                                                                        <Binding ElementName="CB_CheckBox" />
                                                                    </MultiBinding>
                                                                </i:InvokeCommandAction.CommandParameter>
                                                            </i:InvokeCommandAction>
                                                        </i:EventTrigger>
                                                        <i:EventTrigger EventName="Unchecked">
                                                            <i:InvokeCommandAction Command="{Binding DataContext.UncheckedCompl, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                                                <i:InvokeCommandAction.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MultiParamConverter}">
                                                                        <Binding />
                                                                        <Binding ElementName="CB_CheckBox" />
                                                                    </MultiBinding>
                                                                </i:InvokeCommandAction.CommandParameter>
                                                            </i:InvokeCommandAction>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                    <Image DockPanel.Dock="Left"
                                                           VerticalAlignment="Stretch"
                                                           HorizontalAlignment="Stretch"
                                                           Source="{Binding ImageSource}"
                                                           Height="75"
                                                           Width="75"
                                                           Margin="10" />
                                                </CheckBox>
                                                <StackPanel Orientation="Horizontal"
                                                            Grid.Column="1">
                                                    <Grid Margin="0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="FOLIO: "
                                                                   Foreground="Black"
                                                                   FontWeight="Bold" />
                                                        <TextBlock Text="{Binding FOLIO}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1" />
                                                        <TextBlock Text="NOMBRE: "
                                                                   Foreground="Black"
                                                                   FontWeight="Bold"
                                                                   Grid.Row="1" />
                                                        <TextBlock Text="{Binding NOMBRECOMPLETO}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1"
                                                                   Grid.Row="1" />
                                                        <TextBlock Text="UBICACION: "
                                                                   FontWeight="Bold"
                                                                   Grid.Row="2"
                                                                   Foreground="Black" />
                                                        <TextBlock Text="{Binding UBICACION}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1"
                                                                   Grid.Row="2" />
                                                        <TextBlock Text="PLANIMETRIA: "
                                                                   FontWeight="Bold"
                                                                   Grid.Row="3"
                                                                   Foreground="Black" />
                                                        <TextBlock Text="{Binding PLANIMETRIA}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1"
                                                                   Grid.Row="3" />
                                                        <TextBlock Text="SENTENCIA: "
                                                                   FontWeight="Bold"
                                                                   Grid.Row="4"
                                                                   Foreground="Black" />
                                                        <TextBlock Text="{Binding SENTENCIA}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1"
                                                                   Grid.Row="4" />
                                                        <TextBlock Text="SENTENCIA RESTANTE: "
                                                                   FontWeight="Bold"
                                                                   Grid.Row="5"
                                                                   Foreground="Black" />
                                                        <TextBlock Text="{Binding RESTANTE}"
                                                                   Foreground="Black"
                                                                   Grid.Column="1"
                                                                   Grid.Row="5" />
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="3"
                              Grid.Column="2"
                              Header="Horarios Que Se Empalman">
                        <DataGrid Grid.Column="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top"
                                  ItemsSource="{Binding ListActividadParticipanteCompl}"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  AutoGenerateColumns="False"
                                  Style="{StaticResource MetroDataGrid}"
                                  MinHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ACTIVIDAD"
                                                    Binding="{Binding NombreActividad}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="GRUPO"
                                                    Binding="{Binding NombreGrupo}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="RECURRENCIA"
                                                    Binding="{Binding RecurrenciaActividad}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="FECHA INICIO"
                                                    Binding="{Binding InicioActividad}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="FECHA FINAL"
                                                    Binding="{Binding FinActividad}"
                                                    IsReadOnly="True" />
                                <DataGridTemplateColumn Header="REVISIÓN">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Revision, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.UncheckedRevisionCompl, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                                            <i:InvokeCommandAction.CommandParameter>
                                                                <Binding ElementName="List_InternosCompl" />
                                                            </i:InvokeCommandAction.CommandParameter>
                                                        </i:InvokeCommandAction>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </CheckBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Expander IsExpanded="True">
                                        <DataGrid HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  ItemsSource="{Binding Path=ListHorario}"
                                                  IsReadOnly="True"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  CanUserResizeRows="False"
                                                  SelectionMode="Single"
                                                  AutoGenerateColumns="False"
                                                  Style="{StaticResource MetroDataGrid}"
                                                  MaxHeight="350">
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State,UpdateSourceTrigger=PropertyChanged}"
                                                                     Value="Empalme">
                                                            <Setter Property="Background"
                                                                    Value="#C35F57"></Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State,UpdateSourceTrigger=PropertyChanged}"
                                                                     Value="">
                                                            <Setter Property="Background"
                                                                    Value="White"></Setter>
                                                            <Setter Property="Foreground"
                                                                    Value="Black"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.RowStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="LUGAR"
                                                                    Binding="{Binding AREADESCR}"
                                                                    IsReadOnly="True" />
                                                <DataGridTextColumn Header="DIA"
                                                                    Binding="{Binding DESCRDIA}"
                                                                    IsReadOnly="True" />
                                                <DataGridTextColumn Header="HORA INICIO"
                                                                    Binding="{Binding strHORA_INICIO}"
                                                                    IsReadOnly="True" />
                                                <DataGridTextColumn Header="HORA TERMINO"
                                                                    Binding="{Binding strHORA_TERMIINO}"
                                                                    IsReadOnly="True" />
                                                <DataGridTextColumn Header="ESTATUS"
                                                                    Binding="{Binding GRUPO_HORARIO_ESTATUSDESCR}"
                                                                    IsReadOnly="True" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </Controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</UserControl>
