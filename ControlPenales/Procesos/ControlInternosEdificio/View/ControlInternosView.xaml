                         IsEnabled="{Binding TabRequeridoHabilitado}"
                         IsSelected="{Binding SelectRequerido}"
                         Controls:ControlsHelper.HeaderFontSize="18"
                         Style="{StaticResource HeaderTabStyle}">
                    <DataGrid Height="500" MaxWidth="{Binding medida,UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource MetroDataGrid}" 
                                  AutoGenerateColumns="False"
                                  SelectedItem="{Binding SelectedInternoRequerido, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  ItemsSource="{Binding ListaInternosRequeridos, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                  SelectionMode="Single"
                                  IsReadOnly="True">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BooleanToRowTraslado}" 
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Red" />
                                        <Setter Property="Foreground"
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BooleanToRowExcarcelacion}" 
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Blue" />
                                        <Setter Property="Foreground"
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BooleanToRowCitaMedica}"
                                                     Value="True">
                                        <Setter Property="Background"
                                                    Value="Orange" />
                                        <Setter Property="Foreground" 
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BooleanToRowVisitaLegal}"
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Green" />
                                        <Setter Property="Foreground" 
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Citas}"
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="#9948FF" />
                                        <Setter Property="Foreground" 
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BooleanToRowVisitaFamiliar}" 
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Brown" />
                                        <Setter Property="Foreground" 
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding BooleanToRowVisitaIntima}" 
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Magenta" />
                                        <Setter Property="Foreground"
                                                    Value="White" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding EstudioInterno}" 
                                                     Value="True">
                                        <Setter Property="Background" 
                                                    Value="Gray" />
                                        <Setter Property="Foreground"
                                                    Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center"  
                                                      IsChecked="{Binding SELECCIONAR, UpdateSourceTrigger=PropertyChanged}"
                                                      IsEnabled="{Binding SelectEnabled}"
                                                      Command="{Binding DataContext.Checked, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                                      CommandParameter="{Binding}">
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Expediente" 
                                                    Binding="{Binding Expediente}"/>
                            <DataGridTextColumn Header="Apellido Paterno" 
                                                    Binding="{Binding Paterno}"/>
                            <DataGridTextColumn Header="Apellido Materno" 
                                                    Binding="{Binding Materno}"/>
                            <DataGridTextColumn Header="Nombre" 
                                                    Binding="{Binding Nombre}"/>
                            <DataGridTextColumn Header="Ubicación actual" 
                                                    Binding="{Binding Ubicacion}"/>
                            <DataGridTextColumn Header="Estancia" 
                                                    Binding="{Binding Ingreso.CAMA, Converter={StaticResource Est}}"/>
                            <DataGridTextColumn Header="Fecha de Actividad" 
                                                    Binding="{Binding Path=Fecha, StringFormat=dd/MM/yyyy}"/>
                            <DataGridTextColumn Header="Horario de Actividad">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0:00}:{1:00}:{2:00}-{3:00}:{4:00}:{5:00}">
                                        <Binding Path="Hora.Hours" />
                                        <Binding Path="Hora.Minutes" />
                                        <Binding Path="Hora.Seconds" />
                                        <Binding Path="HoraFin.Hours" />
                                        <Binding Path="HoraFin.Minutes" />
                                        <Binding Path="HoraFin.Seconds" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Área" 
                                                    Binding="{Binding Area}"/>
                            <DataGridTextColumn Header="Actividad" 
                                                    Binding="{Binding Actividad}"/>
                        </DataGrid.Columns>
                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridCell.IsSelected"
                                                 Value="True">
                                        <Setter Property="Foreground"
                                                    Value="Black" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Internos Ausentes" 
                         IsEnabled="{Binding TabAusenteHabilitado}"
                         IsSelected="{Binding SelectAusente}"
                         Controls:ControlsHelper.HeaderFontSize="18" 
                         Style="{StaticResource HeaderTabStyle}">
                    <DataGrid Height="500" MaxWidth="{Binding medida,UpdateSourceTrigger=PropertyChanged}"
                                  AutoGenerateColumns="False"
                                  Style="{StaticResource MetroDataGrid}"
                                  ItemsSource="{Binding ListaInternosSeleccionados, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  SelectedItem="{Binding SelectInternosSeleccionados, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                  SelectionMode="Single" 
                                  IsReadOnly="True">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding DoubleClickCommand}" 
                                                           CommandParameter="informacionInterno" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" 
                                                      IsChecked="{Binding SELECTELIMINAR,UpdateSourceTrigger=PropertyChanged}"
                                                      IsEnabled="{Binding SelectEliminarEnabled}"
                                                      Command="{Binding DataContext.CheckedDelete, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                                      CommandParameter="{Binding}">
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Expediente" 
                                                    Binding="{Binding Expediente}"/>
                            <DataGridTextColumn Header="Apellido Paterno" 
                                                    Binding="{Binding Paterno}"/>
                            <DataGridTextColumn Header="Apellido Materno" 
                                                    Binding="{Binding Materno}"/>
                            <DataGridTextColumn Header="Nombre" 
                                                    Binding="{Binding Nombre}"/>
                            <DataGridTextColumn Header="Ubicación Actual" 
                                                    Binding="{Binding Ubicacion}"/>
                            <DataGridTextColumn Header="Estancia" 
                                                    Binding="{Binding Estancia}"/>
                            <DataGridTextColumn Header="Fecha de Actividad" 
                                                    Binding="{Binding Path=Fecha}"/>
                            <DataGridTextColumn Header="Área" 
                                                    Binding="{Binding Area}"/>
                            <DataGridTextColumn Header="Nombre de la Actividad"
                                                    Binding="{Binding Actividad}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>

            <Button Grid.Column="2" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Content="Toma de asistencia" Style="{DynamicResource AccentedSquareButtonStyle}"
                    Command="{Binding OnClick}" CommandParameter="registroSalida" IsEnabled="{Binding AsistenciaHabilitado}">
            </Button>
            
            <GroupBox Header="Tipo de registro" Grid.Column="2" Grid.Row="2" MaxWidth="275">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Stretch">
                        <RadioButton Margin="20 0 0 0" 
                                         Name="demo" 
                                         IsChecked="{Binding TipoRegistroChecked}"
                                         IsEnabled="{Binding TipoRegistroChecked}"
                                         Visibility="{Binding VisibleTipoRegistro}"
                                         Content="{Binding TipoTexto}"/>
                    </StackPanel>
                    <StackPanel>
                        <Button Margin="0 12 0 10" 
                                    Width="150"
                                    Content="Autorizar"
                                    IsEnabled="{Binding AutorizarBtnEnabled}"
                                    Style="{DynamicResource AccentedSquareButtonStyle}" 
                                    Command="{Binding OnClick}"
                                    CommandParameter="autorizar"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <Views:AsignacionCustodio Visibility="{Binding CustodioHuellaVisible}" Grid.Column="2" Grid.Row="3" MaxWidth="275"/>
        </Grid>
    </Grid>


