<UserControl x:Class="ControlPenales.ControlInternosView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="InternosWindow" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
             xmlns:Views="clr-namespace:ControlPenales"
             mc:Ignorable="d" Height="auto" Width="auto">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CmdLoad}" CommandParameter="{Binding ElementName=InternosWindow}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding CmdUnLoaded}" CommandParameter="{Binding ElementName=InternosWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <Views:ExpInterno x:Key="Exp"/>
        <Views:IngresoUbicacion x:Key="Est"/>
    </UserControl.Resources>


    <Grid Name="contenedor">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Views:MenuAutorizacion2View  Grid.Column="0" Grid.Row="0"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Control de Internos en Edificios" Style="{DynamicResource DescriptionHeaderStyle}" />
        <Controls:ToggleSwitch Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left" OffLabel="Escoltar NO"  OnLabel="Escoltar SÍ" IsChecked="{Binding ModoAlternativo}" IsEnabled="{Binding ModoAlternativoHabilitado}" />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="170"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="170"></ColumnDefinition>
                <ColumnDefinition Width="155"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" MaxHeight="45"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0">Edificio</Label>
            <ComboBox IsEnabled="{Binding EdificioHablititado}" Height="25" Grid.Column="1" Grid.Row="0" DisplayMemberPath="DESCR" ItemsSource="{Binding ListaEdificio}" SelectedItem="{Binding SelectedEdificio,UpdateSourceTrigger=PropertyChanged}" />
            <Label Grid.Column="2" Grid.Row="0">Sector</Label>
            <ComboBox Grid.Column="3" Grid.Row="0"  Height="25"  DisplayMemberPath="DESCR" ItemsSource="{Binding ListaSector}" SelectedItem="{Binding SelectedSector,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" IsEnabled="{Binding SectorHabilitado}" />
            <Label Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center">Del</Label>
            <DatePicker Grid.Column="5"  Grid.Row="0"  Height="25" Controls:TextBoxHelper.Watermark="Selecciona una fecha" SelectedDate="{Binding FechaInicio, Mode=TwoWay, ValidatesOnDataErrors=True}" IsEnabled="{Binding FechaInicioHabilitado}"/>
            <Label Grid.Column="6" Grid.Row="0" HorizontalAlignment="Center">al</Label>
            <DatePicker Grid.Column="7" Grid.Row="0"  Height="25" Controls:TextBoxHelper.Watermark="Selecciona una fecha" SelectedDate="{Binding FechaFin, Mode=TwoWay, ValidatesOnDataErrors=True}" IsEnabled="{Binding FechaFinalHabilitado}"/>
            <Button Grid.Column="8" Grid.Row="0" Margin="5 0 0 0" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Buscar" Style="{DynamicResource AccentedSquareButtonStyle}" Command="{Binding OnClick}" CommandParameter="buscar"
                    IsEnabled="{Binding BuscarHabilitado}">
            </Button>
        </Grid>

        <Label Grid.Row="4" Width="auto" HorizontalAlignment="Right" Content="{Binding Actualizacion}" Style="{DynamicResource DescriptionHeaderStyle}"/>

        <Grid Grid.Row="5" HorizontalAlignment="Left"  MaxWidth="{Binding ElementName=contenedor,Path=ActualWidth}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="500"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Width="auto" HorizontalAlignment="Left" Content="{Binding TotalInternos}" Style="{DynamicResource DescriptionHeaderStyle}"/>
            <Label Grid.Column="1" Width="auto" HorizontalAlignment="Left" Content="{Binding InternosSeleccionados}" Style="{DynamicResource DescriptionHeaderStyle}"/>
        </Grid>

        <Grid Grid.Row="7"  MaxWidth="{Binding ElementName=contenedor,Path=ActualWidth}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition MaxWidth="275" MinWidth="275"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition MaxHeight="30"></RowDefinition>
                <RowDefinition MaxHeight="120"></RowDefinition>
                <RowDefinition MaxHeight="500"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Name="medida">
                <TextBlock Text="NOTA: INTERNO PARA" 
                           VerticalAlignment="Top"/>
                <TextBlock Margin="125 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ CITA MÉDICA" 
                           Foreground="Orange"/>
                <TextBlock Margin="210 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ EXCARCELACIÓN"
                           Foreground="Blue"/>
                <TextBlock Margin="315 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ TRASLADO"
                           Foreground="Red"/>
                <TextBlock Margin="385 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ VISITA LEGAL" 
                           Foreground="Green"/>
                <TextBlock Margin="470 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ CITAS TÉCNICAS" 
                           Foreground="#9948FF"/>
                <TextBlock Margin="570 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ VISITA INTIMA"
                           Foreground="Magenta"/>
                <TextBlock Margin="660 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ VISITA FAMILIAR"
                           Foreground="Brown"/>
                <TextBlock Margin="760 0 0 0"
                           VerticalAlignment="Top"
                           Text="/ ESTUDIOS DE PERSONALIDAD"
                           Foreground="Gray"/>

            </Grid >
            
            <TabControl Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Controls:TabControlHelper.IsUnderlined="True" MaxWidth="{Binding medida,UpdateSourceTrigger=PropertyChanged}">
