<UserControl x:Class="ControlPenales.ConsultaExpedienteInternoView" x:Name="ConsultaExpedienteWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:WPF="clr-namespace:TXTextControl.WPF;assembly=TXTextControl.WPF"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:WPFPdfViewer="clr-namespace:WPFPdfViewer;assembly=WPFPdfViewer" xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
xmlns:Views="clr-namespace:ControlPenales" Height="auto" Width="auto"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoaded}" CommandParameter="{Binding ElementName=ConsultaExpedienteWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <Views:TipoEstatusEmiConverter x:Key="TipoEstatusEmiConverter" />
        <Views:IsIngresoActivo x:Key="IsIngresoActivo" />
        <Views:TrimStringConverter x:Key="Trimming" />
        <Views:GetFuero x:Key="GetFuero" />
        <Views:SiNoConverter x:Key="ConvertirSiNo"/>
        <Views:IngresoUbicacion x:Key="IngresoUbicacion" />
        <Views:VisitanteNombreCompleto x:Key="VisitanteNombreCompleto" />
        <Views:MultiValueConverter x:Key="MultiParamConverter"></Views:MultiValueConverter>
        <Views:RowNumberConverter x:Key="converter" />
        <Views:NombreConverter x:Key="NombreConverter"></Views:NombreConverter>
        <Views:GetPersonaNombreReporteNotasMedicas x:Key="NombrePersona"/>
        <Views:GetPersonaNombre x:Key="AtendioAtencionRecibida"></Views:GetPersonaNombre>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="20 0 20 0">
                <Label HorizontalAlignment="Center" Content="Buscar" Padding="0" />
                <Button Width="50" Height="50" ToolTip="Buscar" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding OnClick}" CommandParameter="buscar_ingreso">
                    <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_magnify_browse}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="20 0 20 0">
                <Label HorizontalAlignment="Center" Content="Limpiar" Padding="0" />
                <Button Width="50" Height="50" ToolTip="Limpiar" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding OnClick}" CommandParameter="limpiar_campos">
                    <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_clean}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="20 0 20 0">
                <Label HorizontalAlignment="Center" Content="Ayuda" Padding="0" />
                <Button Width="50" Height="50" ToolTip="Ayuda" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding OnClick}" CommandParameter="ayuda">
                    <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_question}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="4" HorizontalAlignment="Center" Margin="20 0 20 0">
                <Label HorizontalAlignment="Center" Content="Salir" Padding="0" />
                <Button Width="50" Height="50" ToolTip="Salir" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding OnClick}" CommandParameter="salida_ingreso">
                    <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_door_lock_closed}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </StackPanel>
        </Grid>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource DescriptionHeaderStyle}">Consulta a Expediente</Label>
        <DataGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="100" Style="{StaticResource MetroDataGrid}" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single"
                ItemsSource="{Binding ListIngresos}" SelectedItem="{Binding SelectedIngreso}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Núm. Ingreso" Binding="{Binding ID_INGRESO}"></DataGridTextColumn>
                <DataGridTextColumn Header="Activo" Binding="{Binding Converter={StaticResource IsIngresoActivo}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Fecha Ingreso" Binding="{Binding FEC_INGRESO_CERESO}"></DataGridTextColumn>
                <DataGridTextColumn Header="Clasificación Jurídica" Binding="{Binding CLASIFICACION_JURIDICA.DESCR}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tipo de Seguridad" Binding="{Binding TIPO_SEGURIDAD.DESCR}"></DataGridTextColumn>
                <DataGridTextColumn Header="Edificio" Binding="{Binding CAMA.CELDA.SECTOR.EDIFICIO.DESCR,Converter={StaticResource Trimming}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Sector" Binding="{Binding CAMA.CELDA.SECTOR.DESCR,Converter={StaticResource Trimming}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Celda" Binding="{Binding CAMA.CELDA.ID_CELDA}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Header="Procesos" Grid.Row="3" Grid.Column="0" IsEnabled="{Binding MenuIzquierdaEnabled}" Height="800" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Identificación" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Identificación" IsEnabled="{Binding BotonesEnables}" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="identificacion"
                            Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_user_tie}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Información Jurídica" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Información Jurídica" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="informacion_juridica" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_page_text}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Información Administrativa" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Información Administrativa" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="informacion_administrativa"
                            Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_cabinet_files_variant}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Estudios" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Estudios" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="estudios" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_book_perspective}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Visitas" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Visitas" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="visitas" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_group}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Agenda" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Agenda" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="agenda" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_calendar_31}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Expediente Físico" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Expediente Físico" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="expediente_fisico" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_folder_open}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Información Médica" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Información Médica" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="expediente_medico" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_section_expand}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>

                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Kardex" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Kardex" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="kardex_interno" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_brick}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>

                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Label HorizontalAlignment="Center" Content="Histórico" Padding="0" />
                    <Button Width="50" Height="50" ToolTip="Histórico" Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="historico_interno" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_book_perspective}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <GroupBox Header="Identificación" Visibility="{Binding IdentificacionVisible}">
                <ScrollViewer Height="550">
                    <Views:DatosIdentificacionExpView />
                </ScrollViewer>
            </GroupBox>
            <GroupBox Header="Información Jurídica" Visibility="{Binding JuridicoVisible}">
                <ScrollViewer Height="550">
                    <StackPanel Orientation="Vertical">
                        <DataGrid Height="100" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single" ItemsSource="{Binding ListCausasPenalesIngreso}"
                                SelectedItem="{Binding SelectedCausaPenalIngreso}" Style="{StaticResource MetroDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Causa Penal" Binding="{Binding Cp}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha Inicio Compurgación" Binding="{Binding FecSentencia, StringFormat=dd/MM/yyyy}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Juzgado / Fuero" Binding="{Binding JuzgadoFuero}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha Sentencia" Binding="{Binding FecInicioCompurgacion, StringFormat=dd/MM/yyyy}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha Ejecutoria" Binding="{Binding FecEjecutoria, StringFormat=dd/MM/yyyy}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Controls:MetroAnimatedSingleRowTabControl HorizontalAlignment="Stretch" TabStripPlacement="Top" Height="auto" Margin="0 5 0 0" Controls:TabControlHelper.IsUnderlined="True">
                            <TabItem Header="DATOS DE INGRESO" Style="{StaticResource HeaderTabStyle}">
                                <Views:CausasPenalesIngresoExpView />
                            </TabItem>
                            <TabItem Header="DATOS DE CAUSA PENAL" Style="{StaticResource HeaderTabStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <GroupBox Grid.Column="0" Grid.Row="0" Header="Averiguación Previa" IsEnabled="{Binding CausasPenalesIngresoEnabled}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"></ColumnDefinition>
                                                <ColumnDefinition Width="15"></ColumnDefinition>
                                                <ColumnDefinition Width="75"></ColumnDefinition>
                                                <ColumnDefinition Width="15"></ColumnDefinition>
                                                <ColumnDefinition Width="75"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Label Grid.Column="0" Grid.Row="0" Content="Agencia"></Label>
                                            <Label Grid.Column="2" Grid.Row="0" Content="Año"></Label>
                                            <Label Grid.Column="4" Grid.Row="0" Content="Folio"></Label>
                                            <Label Grid.Column="5" Grid.Row="0" Content="Averiguación Previa Foránea"></Label>

                                            <TextBox Grid.Column="0" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.AGENCIA.DESCR, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            <Label Grid.Column="1" Grid.Row="1" Content="/" HorizontalAlignment="Center"></Label>
                                            <TextBox Grid.Column="2" IsEnabled="False" Grid.Row="1" Name="AnioAP" Text="{Binding AnioAP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" >
                                            </TextBox>
                                            <Label Grid.Column="3" Grid.Row="1" Content="/" HorizontalAlignment="Center"></Label>
                                            <TextBox Grid.Column="4" Grid.Row="1" Name="FolioAP" Text="{Binding FolioAP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" IsEnabled="False">
                                            </TextBox>
                                            <TextBox IsEnabled="False" Grid.Column="5" Grid.Row="1" Text="{Binding AveriguacionPreviaAP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"  MaxLength="100" CharacterCasing="Upper"></TextBox>

                                            <Label Grid.Column="0" Grid.Row="2" Content="Inicio Averiguación"></Label>
                                            <Label Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Content="Fecha Consignación"></Label>

                                            <DatePicker Grid.Column="0" Grid.Row="3" Controls:TextBoxHelper.Watermark="Selecciona una fecha" 
                            SelectedDate="{Binding FecAveriguacionAP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" IsEnabled="False" />
                                            <DatePicker Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Controls:TextBoxHelper.Watermark="Selecciona una fecha" 
                            SelectedDate="{Binding FecConsignacionAP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" IsEnabled="False" />
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Column="0" Grid.Row="1" Header="CAUSA PENAL" IsEnabled="{Binding CausasPenalesIngresoEnabled}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Column="0" Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                                    <ColumnDefinition Width="15"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Label Grid.Column="0" Grid.Row="0" Content="Año"></Label>
                                                <Label Grid.Column="2" Grid.Row="0" Content="Folio"></Label>
                                                <Label Grid.Column="3" Grid.Row="0" Content="Bis"></Label>
                                                <Label Grid.Column="4" Grid.Row="0" Content="Causa Penal Foráneo"></Label>
                                                <Label Grid.Column="5" Grid.Row="0" Content="Tipo Orden"></Label>

                                                <TextBox Grid.Column="0" Grid.Row="1" Name="AnioCP" Text="{Binding AnioCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" ></TextBox>
                                                <Label Grid.Column="1" Grid.Row="1" Content="/"></Label>
                                                <TextBox Grid.Column="1" Grid.Row="1" Name="FolioCP" Text="{Binding FolioCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" Grid.ColumnSpan="2" Margin="14,0,1,0"></TextBox>
                                                <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding BisCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" CharacterCasing="Upper"></TextBox>
                                                <TextBox Grid.Column="4" Grid.Row="1" Text="{Binding ForaneoCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"  MaxLength="100" CharacterCasing="Upper"></TextBox>
                                                <TextBox Grid.Column="5" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.TIPO_ORDEN.DESCR, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            </Grid>
                                            <Grid  Grid.Column="0" Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Label Grid.Column="0" Grid.Row="0" Content="País del Juzgado"></Label>
                                                <Label Grid.Column="1" Grid.Row="0" Content="Estado del Juzgado"></Label>
                                                <Label Grid.Column="2" Grid.Row="0" Content="Municipio del Juzgado"></Label>

                                                <TextBox Grid.Column="0" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.PAIS_NACIONALIDAD.PAIS, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                <TextBox Grid.Column="1" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.ENTIDAD.DESCR, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                <TextBox Grid.Column="2" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.MUNICIPIO.MUNICIPIO1, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                                                <Label Grid.Column="0" Grid.Row="2" Content="Fuero"></Label>
                                                <Label Grid.Column="1" Grid.Row="2" Content="Juzgado"></Label>
                                                <Label Grid.Column="2" Grid.Row="2" Content="Fecha de Radicación"></Label>

                                                <TextBox Grid.Column="0" Grid.Row="3" IsEnabled="False"></TextBox>
                                                <TextBox Grid.Column="1" Grid.Row="3" IsEnabled="False" Text="{Binding SelectedCausaPenal.JUZGADO.DESCR, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                                <DatePicker Grid.Column="2" Grid.Row="3" Controls:TextBoxHelper.Watermark="Selecciona una fecha" SelectedDate="{Binding FecRadicacionCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"  />
                                            </Grid>
                                            <Grid Grid.Column="0" Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Label Grid.Column="0" Grid.Row="0" Content="Ampliación"></Label>
                                                <Label Grid.Column="1" Grid.Row="0" Content="Vencimiento de Termino"></Label>
                                                <Label Grid.Column="2" Grid.Row="0" Content="Termino"></Label>
                                                <Label Grid.Column="3" Grid.Row="0" Content="Estatus de la Causa Penal"></Label>

                                                <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding SelectedCausaPenal.CP_AMPLIACION, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ConvertirSiNo}}" IsEnabled="False"></TextBox>

                                                <DatePicker Grid.Column="1" Grid.Row="1" Controls:TextBoxHelper.Watermark="Selecciona una fecha" 
                                SelectedDate="{Binding FecVencimientoTerinoCP,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"  />
                                                <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding SelectedCausaPenal.TERMINO.DESCR, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"></TextBox>
                                                <TextBox Grid.Column="3" Grid.Row="1" IsEnabled="False" Text="{Binding SelectedCausaPenal.CAUSA_PENAL_ESTATUS.DESCR, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            </Grid>
                                            <Label Grid.Column="0" Grid.Row="4" Content="Observaciones" Name="observaciones"></Label>
                                            <TextBox Grid.Column="0" Grid.Row="5" Name="tbObservaciones" Text="{Binding ObservacionesCP}" CharacterCasing="Upper"
                        MaxWidth="{Binding ElementName=observaciones,Path=ActualWidth}"></TextBox>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="Baja" Grid.Row="2" Grid.Column="0" IsEnabled="False">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Label Grid.Column="0" Grid.Row="0" Content="Fecha"></Label>
                                            <Label Grid.Column="1" Grid.Row="0" Content="Motivo"></Label>
                                            <Label Grid.Column="2" Grid.Row="0" Content="Autoridad"></Label>

