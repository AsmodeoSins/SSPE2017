<UserControl x:Class="ControlPenales.RegistroDecomisoView"
             xmlns:Name="RegistroDecomisoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Views="clr-namespace:ControlPenales"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Height="auto" Width="auto">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RegistroDecomisoLoaded}" CommandParameter="{Binding ElementName=RegistroDecomisoWindow}"  />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <Views:ImagenConverter x:Key="CoverterImagen"/>
        <Views:SexoConverter x:Key="ConverterSexo" />
        <Views:PersonaImagenConverter x:Key="ConverterPersonaImagen"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--MENU-->
        <Views:MenuIconosView Grid.Column="0" Grid.Row="0" />
        <!--TITULO-->
        <Label Grid.Column="0" Grid.Row="1"  Content="Registro Decomisos" Style="{DynamicResource DescriptionHeaderStyle}" />

        <GroupBox Grid.Column="0" Grid.Row="2" Header="Información General" Name="info">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="75"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0">Fecha y Hora del Evento</Label>
                <xctk:DateTimePicker Grid.Column="1" Grid.Row="0" Format="Custom" FormatString="dd/MM/yyyy hh:mm tt" Watermark="Seleccione una fecha" IsEnabled="{Binding Editar}"
                        Text="{Binding FechaEventoD,StringFormat=dd/MM/yyyy hh:mm tt,ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Maximum="{Binding FechaActual}" ></xctk:DateTimePicker>
                <Label Grid.Column="2" Grid.Row="0">Fecha y Hora del Informe</Label>
                <xctk:DateTimePicker Grid.Column="3" Grid.Row="0"  IsEnabled="{Binding Editar}" Format="Custom" FormatString="dd/MM/yyyy hh:mm tt" Watermark="Seleccione una fecha"
                        Text="{Binding FechaInformeD,StringFormat=dd/MM/yyyy hh:mm tt,ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Maximum="{Binding FechaActual}"></xctk:DateTimePicker>
                <Label Grid.Column="4" Grid.Row="0">No. Oficio</Label>
                <TextBox Grid.Column="5" Grid.Row="0" MaxLength="20"  IsEnabled="{Binding Editar}" CharacterCasing="Upper" Text="{Binding FolioD,ValidatesOnDataErrors=True}"></TextBox>

                <Label Grid.Column="0" Grid.Row="1">Grupo Táctico</Label>
                <ComboBox Grid.Column="1" Grid.Row="1"  IsEnabled="{Binding Editar}" ItemsSource="{Binding LstGrupoTactico}" SelectedValuePath="ID_GRUPO_TACTICO" DisplayMemberPath="DESCR" SelectedValue="{Binding SelectedGpoTactico,ValidatesOnDataErrors=True}"></ComboBox>
                <Label Grid.Column="2" Grid.Row="1">Turno</Label>
                <ComboBox Grid.Column="3" Grid.Row="1"  IsEnabled="{Binding Editar}" ItemsSource="{Binding LstTurno}" SelectedValuePath="ID_TURNO" DisplayMemberPath="DESCR" SelectedValue="{Binding SelectedTurno,ValidatesOnDataErrors=True}"></ComboBox>

                <Label Grid.Column="0" Grid.Row="2">Área del Decomiso</Label>
                <ComboBox Grid.Column="1" Grid.Row="2"  IsEnabled="{Binding Editar}" ItemsSource="{Binding LstArea}" SelectedValuePath="ID_AREA" DisplayMemberPath="DESCR" SelectedValue="{Binding SelectedArea,ValidatesOnDataErrors=True}"></ComboBox>
                <Label Grid.Column="2" Grid.Row="2">Celda</Label>
                <TextBox Grid.Column="3" Grid.Row="2" Width="125" HorizontalAlignment="Left" IsReadOnly="True" Text="{Binding Celda,ValidatesOnDataErrors=True}" CharacterCasing="Upper"></TextBox>
                <Button Grid.Column="3" Grid.Row="2" Width="100"  HorizontalAlignment="Left" Margin="127 0 0 0" Style="{DynamicResource AccentedSquareButtonStyle}" CommandParameter="seleccionar_ubicacion" Command="{Binding OnClick}" IsEnabled="{Binding EnabledUbicacion}" >Selecciona Celda</Button>
            </Grid>
        </GroupBox>

        <Controls:MetroAnimatedSingleRowTabControl TabStripPlacement="Top" Height="auto" Grid.Column="0" Grid.Row="3" Controls:TabControlHelper.IsUnderlined="True" SelectedItem="{Binding TabSelected}" SelectedIndex="{Binding IndexTab}" >
            <TabItem Header="Oficiales a Cargo" Style="{StaticResource HeaderTabStyle}" IsEnabled="{Binding OficialesEnabled}" Selector.IsSelected="False" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <!--<ColumnDefinition Width="75"></ColumnDefinition>-->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Column="0" Grid.Row="0" Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}" FontSize="11.5" ItemsSource="{Binding LstOficialesACargo}" SelectedItem="{Binding SelectedOficialACargo}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="True"  Style="{StaticResource MetroDataGrid}" Margin="0 15 0 0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="No. Control" Binding="{Binding ID_PERSONA}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding PERSONA.PATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Materno" Binding="{Binding PERSONA.MATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nombre"  Binding="{Binding PERSONA.NOMBRE}"></DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DockPanel Background="#fff">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="100"></ColumnDefinition>
                                            <ColumnDefinition Width="110"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" Content="No.Visita" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="0" Content="Apellido Paterno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="0" Content="Apellido Materno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="0" Content="Nombre" FontWeight="Bold"></Label>
                                        <!--<Label Grid.Column="4" Grid.Row="0" Content="Tipo Visita" FontWeight="Bold"></Label>-->

                                        <Label Grid.Column="0" Grid.Row="1" Content="{Binding PERSONA.ID_PERSONA}"></Label>
                                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding PERSONA.PATERNO}"></Label>
                                        <Label Grid.Column="2" Grid.Row="1" Content="{Binding PERSONA.MATERNO}"></Label>
                                        <Label Grid.Column="3" Grid.Row="1" Content="{Binding PERSONA.NOMBRE}"></Label>
                                        <!--<Label Grid.Column="4" Grid.Row="1" Content=""></Label>-->

                                        <Label Grid.Column="0" Grid.Row="2" Content="Sexo" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="2" Content="Fecha Nacimiento" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="2" Content="RFC" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="2" Content="CURP" FontWeight="Bold"></Label>
                                        <Label Grid.Column="4" Grid.Row="2" Content="Fecha de Alta" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="3" Content="{Binding PERSONA.SEXO,Converter={StaticResource ConverterSexo}}"></Label>
                                        <Label Grid.Column="1" Grid.Row="3" Content="{Binding PERSONA.FEC_NACIMIENTO,StringFormat=dd/MM/yyyy}"></Label>
                                        <Label Grid.Column="2" Grid.Row="3" Content="{Binding PERSONA.RFC}"></Label>
                                        <Label Grid.Column="3" Grid.Row="3" Content="{Binding PERSONA.CURP}"></Label>
                                        <Label Grid.Column="4" Grid.Row="3" Content=""></Label>

                                        <Label Grid.Column="0" Grid.Row="4" Content="Adscripción" FontWeight="Bold"></Label>
                                        <Label Grid.Column="0" Grid.Row="5" Content=""></Label>

                                        <Image Grid.Column="5" Grid.Row="0" Grid.RowSpan="5" Width="100" Height="100" Source="{Binding PERSONA,Converter={StaticResource ConverterPersonaImagen}}"></Image>

                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                        <DataGrid.ContextMenu >
                            <ContextMenu>
                                <MenuItem Header="Agregar" Command="{Binding OnClick}"  CommandParameter="addOficialCargo" Visibility="{Binding VisibleEditar}"/>
                                <MenuItem Header="Eliminar" Command="{Binding OnClick}" CommandParameter="delOficialCargo" Visibility="{Binding VisibleEditar}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                    <Label Grid.Column="0" Grid.Row="1" Content="No hay información..." FontSize="11.5" HorizontalAlignment="Center" FontStyle="Italic" Visibility="{Binding OficialInvolucradoVisible}"></Label>

                    <!--<Button Grid.Column="1" Grid.Row="0" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" ToolTip="Buscar"
                            Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}"
                            Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="buscar_menu" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_magnify_browse}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>-->

                </Grid>
            </TabItem>

            <TabItem Header="Internos Involucrados" Style="{StaticResource HeaderTabStyle}" IsEnabled="{Binding InternosEnabled}" Selector.IsSelected="False" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <!--<ColumnDefinition Width="75"></ColumnDefinition>-->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--<CheckBox Grid.Column="0" Grid.Row="0" Margin="0 10 0 10" FontSize="11.5" Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}">Sin Responsable</CheckBox>-->

                    <DataGrid Grid.Column="0" Grid.Row="1" Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}" FontSize="11.5" ItemsSource="{Binding LstInternoInvolucrado}" SelectedItem="{Binding SelectedInternoInvolucrado}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"  Style="{StaticResource MetroDataGrid}" Margin="0 15 0 0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Año" Binding="{Binding ID_ANIO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Folio" Binding="{Binding ID_IMPUTADO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="No. Ingreso" Binding="{Binding ID_INGRESO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding INGRESO.IMPUTADO.PATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Materno" Binding="{Binding INGRESO.IMPUTADO.MATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding INGRESO.IMPUTADO.NOMBRE}"></DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DockPanel Background="#fff">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="75"></ColumnDefinition>
                                            <ColumnDefinition Width="135"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="75"></ColumnDefinition>
                                            <ColumnDefinition Width="110"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" Content="Año" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="0" Content="Folio" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="0" Content="Apellido Paterno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="0" Content="Apellido Materno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="4" Grid.Row="0" Content="Nombre" FontWeight="Bold"></Label>
                                        <Label Grid.Column="5" Grid.Row="0" Content="Activo" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="1" Content="{Binding INGRESO.ID_ANIO}"></Label>
                                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding INGRESO.ID_IMPUTADO}"></Label>
                                        <Label Grid.Column="2" Grid.Row="1" Content="{Binding INGRESO.IMPUTADO.PATERNO}"></Label>
                                        <Label Grid.Column="3" Grid.Row="1" Content="{Binding INGRESO.IMPUTADO.MATERNO}"></Label>
                                        <Label Grid.Column="4" Grid.Row="1" Content="{Binding INGRESO.IMPUTADO.NOMBRE}"></Label>
                                        <Label Grid.Column="5" Grid.Row="1" Content="Activo"></Label>

                                        <Label Grid.Column="0" Grid.Row="2" Content="No.Ingreso" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="2" Content="Fecha Ingreso" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="2" Content="Cama" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="2" Content="Celda" FontWeight="Bold"></Label>
                                        <Label Grid.Column="4" Grid.Row="2" Content="Sector" FontWeight="Bold"></Label>
                                        <Label Grid.Column="5" Grid.Row="2" Content="Edificio" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="3" Content="{Binding INGRESO.ID_INGRESO}"></Label>
                                        <Label Grid.Column="1" Grid.Row="3" Content="{Binding INGRESO.FEC_REGISTRO,StringFormat=dd/MM/yyyy}"></Label>
                                        <Label Grid.Column="2" Grid.Row="3" Content="{Binding INGRESO.CAMA.ID_CAMA}"></Label>
                                        <Label Grid.Column="3" Grid.Row="3" Content="{Binding INGRESO.CAMA.CELDA.ID_CELDA}"></Label>
                                        <Label Grid.Column="4" Grid.Row="3" Content="{Binding INGRESO.CAMA.CELDA.SECTOR.DESCR}"></Label>
                                        <Label Grid.Column="5" Grid.Row="3" Content="{Binding INGRESO.CAMA.CELDA.SECTOR.EDIFICIO.DESCR}"></Label>

                                        <Image Grid.Column="6" Grid.Row="0" Grid.RowSpan="5" Width="90" Height="100" HorizontalAlignment="Left" Source="{Binding INGRESO,Converter={StaticResource CoverterImagen}}"></Image>
                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                        <DataGrid.ContextMenu>
                            <ContextMenu IsEnabled="{Binding Editar}">
                                <MenuItem Header="Agregar" Command="{Binding OnClick}" CommandParameter="addInterno"  Visibility="{Binding VisibleEditar}"/>
                                <MenuItem Header="Eliminar" Visibility="{Binding VisibleEditar}" Command="{Binding OnClick}" CommandParameter="delInterno"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                    <Label Grid.Column="0" Grid.Row="2" Content="No hay información..." FontSize="11.5" HorizontalAlignment="Center" FontStyle="Italic" Visibility="{Binding InternoInvolucradoVisible}"></Label>

                    <!--<Button Grid.Column="1" Grid.Row="1" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" ToolTip="Buscar"
                            Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}"
                            Style="{DynamicResource MetroCircleButtonStyle}" CommandParameter="buscar_interno" Command="{Binding OnClick}">
                        <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_magnify_browse}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>-->

                </Grid>
            </TabItem>

            <TabItem Header="Visitas Involucradas" Style="{StaticResource HeaderTabStyle}" IsEnabled="{Binding VisitasEnabled}" Selector.IsSelected="False" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <!--<ColumnDefinition Width="75"></ColumnDefinition>-->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--<CheckBox Grid.Column="0" Grid.Row="0" Margin="0 10 0 10" FontSize="11.5" Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}">Sin Responsable</CheckBox>-->

                    <DataGrid Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Path=BuscarActivadoVisible, Converter={StaticResource booleanToVisibilityConverter}}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"  ItemsSource="{Binding LstVisitaInvolucrada}" SelectedItem="{Binding SelectedVisitaInvolucrada}" Style="{StaticResource MetroDataGrid}" Margin="0 15 0 0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Núm.Visita" Binding="{Binding ID_PERSONA}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding PERSONA.PATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Apellido Materno" Binding="{Binding PERSONA.MATERNO}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding PERSONA.NOMBRE}"></DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DockPanel Background="#FFF">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                            <ColumnDefinition Width="75"></ColumnDefinition>
                                            <ColumnDefinition Width="110"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" Content="No.Visita" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="0" Content="Apellido Paterno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="0" Content="Apellido Materno" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="0" Content="Nombre" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="1" Content="{Binding PERSONA.ID_PERSONA}"></Label>
                                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding PERSONA.PATERNO}"></Label>
                                        <Label Grid.Column="2" Grid.Row="1" Content="{Binding PERSONA.MATERNO}"></Label>
                                        <Label Grid.Column="3" Grid.Row="1" Content="{Binding PERSONA.NOMBRE}"></Label>

                                        <Label Grid.Column="0" Grid.Row="2" Content="Sexo" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="2" Content="Fecha Nacimiento" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="2" Content="RFC" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="2" Content="CURP" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="3" Content="{Binding PERSONA.SEXO,Converter={StaticResource ConverterSexo}}"></Label>
                                        <Label Grid.Column="1" Grid.Row="3" Content="{Binding PERSONA.FEC_NACIMIENTO,StringFormat=dd/MM/yyyy}"></Label>
                                        <Label Grid.Column="2" Grid.Row="3" Content="{Binding PERSONA.RFC}"></Label>
                                        <Label Grid.Column="3" Grid.Row="3" Content="{Binding PERSONA.CURP}"></Label>

                                        <Label Grid.Column="0" Grid.Row="4" Content="Telefono Fijo" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="4" Content="Telefono Movil" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="4" Content="Correo Electronico" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="4" Content="Fecha Alta" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="5" Content="{Binding PERSONA.TELEFONO}"></Label>
                                        <Label Grid.Column="1" Grid.Row="5" Content="{Binding PERSONA.TELEFONO_MOVIL}"></Label>
                                        <Label Grid.Column="2" Grid.Row="5" Content="{Binding PERSONA.CORREO_ELECTRONICO}"></Label>
                                        <Label Grid.Column="3" Grid.Row="5" Content="{Binding PERSONA.VISITANTE.FEC_ALTA,StringFormat=dd/MM/yyyy}"></Label>

                                        <Label Grid.Column="0" Grid.Row="6" Content="Domicilio" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="7" Content="Pais" FontWeight="Bold"></Label>
                                        <Label Grid.Column="1" Grid.Row="7" Content="Estado" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="7" Content="Municipio" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="7" Content="Colonia" FontWeight="Bold"></Label>

                                        <Label Grid.Column="0" Grid.Row="8" Content="{Binding PERSONA.COLONIA.MUNICIPIO.ENTIDAD.PAIS_NACIONALIDAD.PAIS}"></Label>
                                        <Label Grid.Column="1" Grid.Row="8" Content="{Binding PERSONA.COLONIA.MUNICIPIO.ENTIDAD.DESCR}"></Label>
                                        <Label Grid.Column="2" Grid.Row="8" Content="{Binding PERSONA.COLONIA.MUNICIPIO.MUNICIPIO1}"></Label>
                                        <Label Grid.Column="3" Grid.Row="8" Content="{Binding PERSONA.COLONIA.DESCR}"></Label>

                                        <Label Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2" Content="Calle" FontWeight="Bold"></Label>
                                        <Label Grid.Column="2" Grid.Row="9" Content="No.Exterior" FontWeight="Bold"></Label>
                                        <Label Grid.Column="3" Grid.Row="9" Content="No.Interior" FontWeight="Bold"></Label>
