                                        <Label Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2" Content="{Binding PERSONA.DOMICILIO_CALLE}"></Label>
                                        <Label Grid.Column="2" Grid.Row="10" Content="{Binding PERSONA.DOMICILIO_NUM_EXT}"></Label>
                                        <Label Grid.Column="3" Grid.Row="10" Content="{Binding PERSONA.DOMICILIO_NUM_INT}"></Label>
                                        <Label Grid.Column="4" Grid.Row="10" Content="{Binding PERSONA.DOMICILIO_CODIGO_POSTAL}"></Label>

