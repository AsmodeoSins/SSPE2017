                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Cantidad" Binding="{Binding CANTIDAD}"></DataGridTextColumn>
                                    <DataGridTextColumn Header="Tipo Objeto" Binding="{Binding OBJETO_TIPO.DESCR}"></DataGridTextColumn>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu >
                                        <MenuItem Header="Agregar" Command="{Binding OnClick}" CommandParameter="addObjeto"  Visibility="{Binding VisibleEditar}"/>
                                        <MenuItem Header="Editar" Command="{Binding OnClick}" CommandParameter="editObjeto"  Visibility="{Binding VisibleEditar}"/>
                                        <MenuItem Header="Eliminar" Command="{Binding OnClick}" CommandParameter="delObjeto"  Visibility="{Binding VisibleEditar}"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                            <Label Grid.Column="0" Grid.Row="1" Content="No hay información..." FontSize="11.5"  HorizontalAlignment="Center" FontStyle="Italic" Visibility="{Binding ObjetoVisible}"></Label>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Descripción del Objeto" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Margin="0 15 15 0" Name="Objeto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"></ColumnDefinition>
                                    <ColumnDefinition Width="200"></ColumnDefinition>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Tipo Objeto" FontSize="11.5"></Label>
                                <ComboBox Grid.Column="1" Grid.Row="0" FontSize="11.5" Width="200"  IsEnabled="{Binding Editar}" HorizontalAlignment="Left" ItemsSource="{Binding LstObjetoTipo}" SelectedItem="{Binding SelectedObjetoTipo}" SelectedValue="{Binding OTipo}" SelectedValuePath="ID_OBJETO_TIPO" DisplayMemberPath="DESCR" Margin="0 0 0 10"></ComboBox>

                                <Button Grid.Column="2" Grid.Row="0" FontSize="11.5" Width="95"  Margin="0 0 0 10"  IsEnabled="{Binding Editar}" Style="{DynamicResource AccentedSquareButtonStyle}" CommandParameter="guardar_objeto" Command="{Binding OnClick}" Content="Agregar"></Button>
                                <Button Grid.Column="3" Grid.Row="0" FontSize="11.5" Width="95"  Margin="0 0 0 10"  IsEnabled="{Binding Editar}" Style="{DynamicResource AccentedSquareButtonStyle}" CommandParameter="addObjeto" Command="{Binding OnClick}" Content="{Binding BtnLimpiarText}"></Button>
                            </Grid>

                            <Views:Configuracion1View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion1Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion1View>
                            <Views:Configuracion2View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion2Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion2View>
                            <Views:Configuracion3View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion3Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion3View>
                            <Views:Configuracion4View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion4Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion4View>
                            <Views:Configuracion5View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion5Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion5View>
                            <Views:Configuracion6View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion6Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion6View>
                            <Views:Configuracion7View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion7Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion7View>
                            <Views:Configuracion8View Grid.Column="0" Grid.Row="1" FontSize="11.5" Visibility="{Binding Configuracion8Visible,Converter={StaticResource booleanToVisibilityConverter}}"></Views:Configuracion8View>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Imagen del Objeto" Grid.Column="0" Grid.Row="2" Margin="0 5 15 0" Visibility="{Binding ImagenesVisible}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Button Grid.Column="0" Grid.Row="0" FontSize="11.5" HorizontalAlignment="left" Width="100"  IsEnabled="{Binding Editar}" Style="{DynamicResource AccentedSquareButtonStyle}" CommandParameter="imagen_objeto" Command="{Binding OnClick}" Content="Agregar Imagen" Margin="0 2 2 2"></Button>
                            <DataGrid Grid.Column="0" Grid.Row="1" FontSize="11.5" CanUserAddRows="False" IsReadOnly="false" AutoGenerateColumns="False" ItemsSource="{Binding LstImagenes}" SelectedItem="{Binding SelectedImagen}" Style="{StaticResource MetroDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Imagen">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Image Width="100" Source="{Binding IMAGEN,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"></Image>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Eliminar" Command="{Binding OnClick}" CommandParameter="delImagenObjeto"  Visibility="{Binding VisibleEditar}"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                            <Label Grid.Column="0" Grid.Row="2" Content="No hay información..." FontSize="11.5" HorizontalAlignment="Center" FontStyle="Italic" Visibility="{Binding ImagenVisible}"></Label>
                        </Grid>
                    </GroupBox>
                </Grid>

            </TabItem>

            <TabItem Header="Resumen" Margin="0,0,0,0" Style="{StaticResource HeaderTabStyle}" IsEnabled="{Binding ResumenEnabled}" Selector.IsSelected="False">
                <GroupBox Header="Narración de los hechos" FontSize="11.5" MaxWidth="{Binding ElementName=info,Path=ActualWidth}" Margin="0 15 0 0" >
                    <AdornerDecorator>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" MinLines="5" MaxLines="10" MinHeight="150" MaxHeight="150" Margin="5 15 5 0" Text="{Binding ResumenD,ValidatesOnDataErrors=True}" MaxLength="4000" CharacterCasing="Upper" TextWrapping="Wrap" MaxWidth="{Binding ElementName=info,Path=ActualWidth}"></TextBox>
                    </Grid>
                    </AdornerDecorator>
                </GroupBox>
            </TabItem>

            <TabItem Header="Reporte" Margin="0,0,0,0" Style="{StaticResource HeaderTabStyle}" IsEnabled="{Binding ResumenEnabled}" Selector.IsSelected="False">
                <GroupBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Header="Favor de Llenar los Campos Disponibles">
                    <AdornerDecorator>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0" Content="Oficio de Seguridad No."></Label>
                        <TextBox Grid.Column="0" Grid.Row="1" MaxLength="20" IsEnabled="{Binding Editar}" Text="{Binding IOficioSeguridad,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"  TabIndex="1004">
                            <i:Interaction.Behaviors>
                                <Views:AllowableCharactersTextBoxBehavior RegularExpression="^[0-9]+$" MaxLength="20" />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Column="0" Grid.Row="2" Content="Jefe de Turno"></Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="Comandante"></Label>

                        <TextBox Grid.Column="0" Grid.Row="3" MaxLength="100" CharacterCasing="Upper"  IsEnabled="{Binding Editar}" Text="{Binding IJefeTurno, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" TabIndex="1005"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="3" MaxLength="100" CharacterCasing="Upper"  IsEnabled="{Binding Editar}" Text="{Binding IComandante, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" TabIndex="1006"></TextBox>

                        <Label Grid.Column="0" Grid.Row="4" Content="Oficio Comandancia 1"></Label>
                        <Label Grid.Column="1" Grid.Row="4" Content="Oficio Comandancia 2"></Label>

                        <TextBox Grid.Column="0" Grid.Row="5" MaxLength="20"  IsEnabled="{Binding Editar}"  Text="{Binding IOficioComandancia1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" TabIndex="1007">
                            <i:Interaction.Behaviors>
                                <Views:AllowableCharactersTextBoxBehavior RegularExpression="^[0-9]+$" MaxLength="20" />
                            </i:Interaction.Behaviors>
                        </TextBox>
                        <TextBox Grid.Column="1" Grid.Row="5" MaxLength="20"  IsEnabled="{Binding Editar}" Text="{Binding IOficioComandancia2, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" TabIndex="1008">
                            <i:Interaction.Behaviors>
                                <Views:AllowableCharactersTextBoxBehavior RegularExpression="^[0-9]+$" MaxLength="20" />
                            </i:Interaction.Behaviors>
                        </TextBox>
                    </Grid>
                    </AdornerDecorator>
                </GroupBox>

            </TabItem>

        </Controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</UserControl>
