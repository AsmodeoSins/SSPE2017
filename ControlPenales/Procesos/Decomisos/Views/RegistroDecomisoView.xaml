                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                        <DataGrid.ContextMenu>
                            <ContextMenu IsEnabled="{Binding Editar}">
                                <MenuItem Header="Agregar" Command="{Binding OnClick}" CommandParameter="addVisitante" Visibility="{Binding VisibleEditar}" />
                                <MenuItem Header="Eliminar"  Visibility="{Binding VisibleEditar}" Command="{Binding OnClick}" CommandParameter="delVisitante"/>
                            </ContextMenu>
