                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Column="0" Grid.Row="0" Header="ÁREA MÉDICA" Grid.ColumnSpan="2">
                            <AdornerDecorator>
                                <Grid>
                                    <Grid.ColumnDefinitions>
