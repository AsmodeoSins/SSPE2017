                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="2" Content="En caso afirmativo, señale ocupación (es)" Grid.ColumnSpan="2" Name="lblReferencia10"></Label>
                                    <TextBox Grid.Column="0" MaxLength="500" IsEnabled="{ Binding EnabledSI}" Grid.Row="3" Grid.ColumnSpan="2" MaxWidth="{ Binding ElementName=lblReferencia10, Path=ActualWidth}" Text="{ Binding SenialeOcupacionTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper" TextWrapping="Wrap" MinHeight="50"></TextBox>
