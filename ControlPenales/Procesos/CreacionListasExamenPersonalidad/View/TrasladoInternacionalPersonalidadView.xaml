                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Content="Coeficiente intelectual" Name="lblCoefi"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="1" CharacterCasing="Upper" MaxWidth="{ Binding ElementName=lblCoefi, Path=ActualWidth}" MaxLength="100" Text="{ Binding CoeficIntTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                                    <Label Grid.Column="1" Grid.Row="0" Content="Daño órgano cerebral"></Label>
                                    <ComboBox Grid.Column="1" Grid.Row="1" SelectedValuePath="Tag" SelectedValue="{ Binding DanioCerebTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="2" Content="Agresividad" Grid.ColumnSpan="2" Name="lblReferencia5"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="3" MaxLength="500" Grid.ColumnSpan="2" MaxWidth="{ Binding ElementName=lblReferencia5, Path=ActualWidth}" TextWrapping="Wrap" MinHeight="50" CharacterCasing="Upper" Text="{ Binding DescAgresividad, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>

                                    <Label Grid.Column="0" Grid.Row="4" Content="Otros aspectos de personalidad significativos"></Label>
                                    <TextBox Grid.Column="0" MaxLength="500" Grid.Row="5" Grid.ColumnSpan="2" MaxWidth="{ Binding ElementName=lblReferencia5, Path=ActualWidth}" TextWrapping="Wrap" MinHeight="50" CharacterCasing="Upper" Text="{ Binding OtrosAspectosPersonalidadTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                        <GroupBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Header="Social">
