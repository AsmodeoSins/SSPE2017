                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Content="Durante su reclusión la conducta observada se considere"></Label>
                                    <ComboBox Grid.Column="0" Grid.Row="1" SelectedValuePath="Tag" SelectedValue="{ Binding ConductaConsidTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag="-1"></ComboBoxItem>
                                        <ComboBoxItem Content="BUENA" Tag="1"></ComboBoxItem>
                                        <ComboBoxItem Content="REGULAR" Tag="2"></ComboBoxItem>
                                        <ComboBoxItem Content="MALA" Tag="3"></ComboBoxItem>
                                    </ComboBox>
                                    <GroupBox Grid.Column="0" Grid.Row="2" Header="Correctivos disciplinarios" Grid.ColumnSpan="2">
                                        <AdornerDecorator>
                                            <DataGrid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding LstSancionesTrasladoInt, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedSancionTrasladoIntern}" SelectionMode="Single"
                    CanUserAddRows="False" Style="{StaticResource MetroDataGrid}" IsReadOnly="True">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Motivo" Binding="{Binding MOTIVO}"></DataGridTextColumn>
                                                    <DataGridTextColumn Header="Fecha" Binding="{Binding SANCION_FEC}"></DataGridTextColumn>
                                                    <DataGridTextColumn Header="Sanción" Binding="{Binding SANCION}"></DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </AdornerDecorator>
                                    </GroupBox>
                                    <Label Grid.Column="0" Grid.Row="4" Content="Índice de peligrosidad actual"></Label>
                                    <ComboBox Grid.Column="0" Grid.Row="5" ItemsSource="{Binding LstPeligrosidadTraslados}" DisplayMemberPath="DESCR" SelectedValuePath="ID_PELIGROSIDAD"
                        SelectedValue="{ Binding IdPeligroTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></ComboBox>
                                    <Label Grid.Column="1" Grid.Row="4" Content="Presenta actualmente adicción a tóxicos"></Label>
                                    <ComboBox Grid.Column="1" Grid.Row="5" SelectedValuePath="Tag" SelectedValue="{ Binding AdiccionToxicosTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="6" Content="En caso afirmativo cuales" Grid.ColumnSpan="2" Name="lblReferencia11"></Label>
                                    <TextBox Grid.Column="0" MaxLength="500" TextWrapping="Wrap" Grid.Row="7" IsEnabled="{ Binding EnabledToxicosInt}" MaxWidth="{ Binding ElementName=lblReferencia11, Path=ActualWidth}" Grid.ColumnSpan="2" MinHeight="50" CharacterCasing="Upper" Text="{ Binding CasoAfirmativoCualesTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="8" Content="Requiere continuar con tratamiento" Grid.ColumnSpan="2"></Label>
                                    <StackPanel Grid.Column="1" Grid.Row="8" Orientation="Horizontal">
                                        <CheckBox Content="PSICOLÓGICO" Grid.Column="0" Grid.Row="1" IsChecked="{ Binding IsPsicoTrasladoInterNacionalChecked, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                                        <CheckBox Content="EDUCATIVO" Grid.Column="0" Grid.Row="1" IsChecked="{ Binding IsEducTrasladoInterNacionalChecked, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                                        <CheckBox Content="LABORAL" Grid.Column="0" Grid.Row="1" IsChecked="{ Binding IsLabTrasladoInterNacionalChecked, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                                    </StackPanel>
                                    <Label Grid.Column="0" Grid.Row="9" Content="Otros Señale"></Label>
                                    <TextBox Grid.Column="0" MaxLength="500" Grid.Row="10" MaxWidth="{ Binding ElementName=lblReferencia11, Path=ActualWidth}" Text="{ Binding EspecifiqueOtroTratamientoTrasladoInterNacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper" TextWrapping="Wrap" MinHeight="50" Grid.ColumnSpan="3"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="11" Content="Indique otros aspectos relevantes no contemplados anteriormente, con objeto de emitir una opinión objetiva sobre el caso que nos ocupa" Grid.ColumnSpan="2"></Label>
                                    <TextBox Grid.Column="0" MaxLength="500" Grid.Row="12" Grid.ColumnSpan="2" MaxWidth="{ Binding ElementName=lblReferencia11, Path=ActualWidth}" TextWrapping="Wrap" CharacterCasing="Upper" Text="{ Binding OtrosAspectosTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" MinHeight="50"></TextBox>
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                    </Grid>
                </AdornerDecorator>
            </GroupBox>
        </Grid>
    </AdornerDecorator>
</UserControl>