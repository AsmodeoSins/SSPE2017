                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="2" Content="En caso negativo, señale las causas" Grid.ColumnSpan="2" Name="lblReferencia9"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" MinHeight="50" MaxLength="100" CharacterCasing="Upper" MaxWidth="{ Binding ElementName=lblReferencia9, Path=ActualWidth}" TextWrapping="Wrap" Text="{ Binding CausasNoEstudiaTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsEnabled="{ Binding EnabledPorqueEstudia, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="4" Content="Otros cursos o la capacitación que haya recibido"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="5" MaxLength="500" MinHeight="50" CharacterCasing="Upper" TextWrapping="Wrap" MaxWidth="{ Binding ElementName=lblReferencia9, Path=ActualWidth}" Text="{ Binding OtrosCursosCapacRecibTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.ColumnSpan="2"></TextBox>
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                        <GroupBox Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Header="laboral">
                            <AdornerDecorator>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
