                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Content="Apoyo familiar de padres"></Label>
                                    <ComboBox Grid.Column="0" Grid.Row="1" SelectedValuePath="Tag" SelectedValue="{ Binding ApoyoPadresTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="1" Grid.Row="0" Content="Cónyuge"></Label>
                                    <ComboBox Grid.Column="1" Grid.Row="1" SelectedValuePath="Tag" SelectedValue="{ Binding ConyugeTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Content="Mencione el nombre y parentesco de las personas que lo visitan"></Label>
                                    <DataGrid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding LstVisitasTraslInt, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedVisitaTrasladoInt}" SelectionMode="Single"
                    CanUserAddRows="False" Style="{StaticResource MetroDataGrid}" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Nombre" Binding="{Binding NOMBRE}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Paterno" Binding="{Binding PATERNO}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Materno" Binding="{Binding MATERNO }"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Parentesco" Binding="{Binding TIPO_REFERENCIA.DESCR}"></DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Label Grid.Column="0" Grid.Row="4" Content="Frecuencia de visita" Grid.ColumnSpan="2" Name="lblReferencia6"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" MaxLength="500" MaxWidth="{ Binding ElementName=lblReferencia6, Path=ActualWidth}" Text="{ Binding FrecuenciaVisitaTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper" TextWrapping="Wrap" MinHeight="50"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Content="En caso de no recibir visitas, señale las causas"></Label>
                                    <TextBox Grid.Column="0" Grid.Row="7" MaxLength="500" MaxWidth="{ Binding ElementName=lblReferencia6, Path=ActualWidth}" Grid.ColumnSpan="2" Text="{ Binding NoRecibeVisitaCausasTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper" TextWrapping="Wrap" MinHeight="50" IsEnabled="{ Binding EnabledNoVisitTrasladoInternacional, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="8" Content="Cuenta con carta de arraigo domiciliario"></Label>
                                    <ComboBox Grid.Column="0" Grid.Row="9" SelectedValuePath="Tag" SelectedValue="{ Binding CartaArraigoCuentaTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="0" Grid.Row="10" Content="Domicilio" Name="lblReferencia7" Grid.ColumnSpan="2"></Label>
                                    <TextBox Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" MinHeight="50" IsEnabled="{ Binding EnabledCarta}" MaxLength="500" CharacterCasing="Upper" MaxWidth="{ Binding ElementName=lblReferencia7, Path=ActualWidth}" Grid.Row="11" Text="{ Binding DomicilioTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                                    <Label Grid.Column="0" Grid.Row="12" Content="Anuencia de cupo por las autoridades del centro receptor"></Label>
                                    <ComboBox Grid.Column="0" Grid.Row="13" SelectedValuePath="Tag" SelectedValue="{ Binding AnuenciaCupoTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" >
                                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                                        <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                                        <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                                        <ComboBoxItem Content="SE DESCONOCE" Tag="D"></ComboBoxItem>
                                    </ComboBox>
                                    <Label Grid.Column="1" Grid.Row="12" Content="Fecha"></Label>
                                    <DatePicker Grid.Column="1" Grid.Row="13" Controls:TextBoxHelper.Watermark="Seleccione una fecha"
                SelectedDate="{Binding FechaAnuenciaTrasladoInternacional,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"></DatePicker>
                                    <Label Grid.Column="0" Grid.Row="14" Content="Nivel socioeconómico" Grid.ColumnSpan="2" Name="lblReferencia8"></Label>
                                    <TextBox Grid.Column="0" MaxLength="100" Grid.ColumnSpan="2" Grid.Row="15" MaxWidth="{ Binding ElementName=lblReferencia8, Path=ActualWidth}" Text="{ Binding NivelSocioETrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper"></TextBox>
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                        <GroupBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Header="Pedagógico">
                            <AdornerDecorator>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
