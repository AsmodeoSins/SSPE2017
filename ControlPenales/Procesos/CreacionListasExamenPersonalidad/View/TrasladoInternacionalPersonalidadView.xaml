                                    <Label Grid.Column="1" Grid.Row="2" Content="Tratamiento actual"></Label>
                                    <TextBox Grid.Column="1" MaxLength="500" Grid.Row="3" MinHeight="50" MaxWidth="{ Binding ElementName=lblReferencia4, Path=ActualWidth}" TextWrapping="Wrap" CharacterCasing="Upper" Text="{ Binding TratamientoActualTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                        <GroupBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Header="ASPECTO PSICOLÓGICO">
                            <AdornerDecorator>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
