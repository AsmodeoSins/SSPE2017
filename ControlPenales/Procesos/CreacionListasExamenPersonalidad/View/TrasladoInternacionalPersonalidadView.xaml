                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Content="Nombre"></Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="Edad"></Label>
                        <Label Grid.Column="2" Grid.Row="0" Content="Edo. Civil"></Label>
                        <Label Grid.Column="3" Grid.Row="0" Content="Originario"></Label>

                        <TextBox Grid.Column="0" Grid.Row="1" CharacterCasing="Upper" Text="{ Binding NombreTrasladoInternac, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="1" CharacterCasing="Upper" Text="{ Binding EdadTrasladoInternac, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
                        <TextBox Grid.Column="2" Grid.Row="1" CharacterCasing="Upper" Text="{ Binding EdoCivilTrasladoInternac, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
                        <TextBox Grid.Column="3" Grid.Row="1" CharacterCasing="Upper" Text="{ Binding OriginarioTrasladoInternac, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="0" Grid.Row="2" Content="Lugar de residencia de sus familiares" Grid.ColumnSpan="4"></Label>
                        <TextBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" CharacterCasing="Upper" Text="{ Binding LugarResidenciaTrasladoInternac, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="0" Grid.Row="4" Content="Escolaridad" Grid.ColumnSpan="2" Name="lblReferencia1"></Label>
                        <Label Grid.Column="2" Grid.Row="4" Content="Ocupación previa" Grid.ColumnSpan="2"></Label>
                        <TextBox MaxWidth="{ Binding ElementName=lblReferencia1, Path=ActualWidth}" Grid.Column="0" Grid.Row="5" MinHeight="50" MaxLength="100" TextWrapping="Wrap" CharacterCasing="Upper" Text="{ Binding EscolaridadTrasladoInternac, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.ColumnSpan="2"></TextBox>
                        <TextBox MaxWidth="{ Binding ElementName=lblReferencia1, Path=ActualWidth}" Grid.Column="2" Grid.Row="5" MinHeight="50" MaxLength="100" TextWrapping="Wrap" CharacterCasing="Upper" Text="{ Binding OcupacionPreviaTrasladoInternac, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.ColumnSpan="2"></TextBox>
                    </Grid>
                </AdornerDecorator>
            </GroupBox>
            <GroupBox Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Header="ii .- Situación jurídica">
                <AdornerDecorator>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding LstDelitosUno, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedDelitoUno}" SelectionMode="Single"
                    CanUserAddRows="False" Style="{StaticResource MetroDataGrid}" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Delito" Binding="{Binding Delito}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Proceso" Binding="{Binding Proceso}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Fuero común" Binding="{Binding FComun}"></DataGridTextColumn>
                                <DataGridTextColumn Header="fuero federal" Binding="{Binding FFederal}"></DataGridTextColumn>
                                <DataGridTextColumn Header="pena" Binding="{Binding Pena}"></DataGridTextColumn>
                                <DataGridTextColumn Header="a partir" Binding="{Binding APartir }"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Grid.Column="0" Grid.Row="1" Content="Antecedentes penales"></Label>
                        <ComboBox Grid.Column="0" Grid.Row="2" SelectedValuePath="Tag" SelectedValue="{ Binding AntecedentesPenalesTrasladoInternacional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                            <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
                            <ComboBoxItem Content="SI" Tag="S"></ComboBoxItem>
                            <ComboBoxItem Content="NO" Tag="N"></ComboBoxItem>
                        </ComboBox>
                        <Label Grid.Column="0" Grid.Row="3" Content="Enunciarlos en caso afirmativo"></Label>
                        <DataGrid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding LstDelitosDos, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedDelitoDos}" SelectionMode="Single"
                    CanUserAddRows="False" Style="{StaticResource MetroDataGrid}" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Delito" Binding="{Binding Delito}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Proceso" Binding="{Binding Proceso}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Fuero común" Binding="{Binding FComun}"></DataGridTextColumn>
                                <DataGridTextColumn Header="fuero federal" Binding="{Binding FFederal}"></DataGridTextColumn>
                                <DataGridTextColumn Header="pena" Binding="{Binding Pena}"></DataGridTextColumn>
                                <DataGridTextColumn Header="a partir" Binding="{Binding APartir }"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Grid.Column="0" Grid.Row="5" Content="Versión del delito según actas procesales" Grid.ColumnSpan="2" Name="lblReferencia3"></Label>
                        <TextBox Grid.Column="0" MaxLength="100" Grid.Row="6" MinHeight="50" Grid.ColumnSpan="2" MaxWidth="{ Binding ElementName=lblReferencia3, Path=ActualWidth}" Text="{ Binding VersionDelitoTrasladoInternacional, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" CharacterCasing="Upper" TextWrapping="Wrap"></TextBox>
                    </Grid>
                </AdornerDecorator>
            </GroupBox>
            <GroupBox Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" Header="III .- diagnóstico clínico - criminológico actual">
                <AdornerDecorator>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
