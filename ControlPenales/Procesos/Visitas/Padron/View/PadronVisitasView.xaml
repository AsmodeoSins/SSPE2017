                                                <ColumnDefinition Width="317*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="61*"/>
                                            </Grid.ColumnDefinitions>
                                            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Name="dgImputados1" HorizontalAlignment="Stretch" 
                                                  SelectionMode="Single" Style="{StaticResource MetroDataGrid}" VerticalAlignment="Stretch" ItemsSource="{Binding  ListadoInternos}" 
                                                  FontSize="11" Grid.Column="0" >
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Año" Binding="{Binding INGRESO.ID_ANIO}"/>
                                                    <DataGridTextColumn Header="Folio" Binding="{Binding INGRESO.ID_IMPUTADO}"/>
                                                    <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding INGRESO.IMPUTADO.PATERNO, Converter={StaticResource Trimming}}"/>
                                                    <DataGridTextColumn Header="Apellido Materno" Binding="{Binding INGRESO.IMPUTADO.MATERNO, Converter={StaticResource Trimming}}"/>
                                                    <DataGridTextColumn Header="Nombre" Binding="{Binding INGRESO.IMPUTADO.NOMBRE, Converter={StaticResource Trimming}}"/>
                                                    <DataGridTemplateColumn Header="Ubicación">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding INGRESO.CAMA.CELDA.SECTOR.EDIFICIO.DESCR}"></TextBlock>
                                                                    <TextBlock Text="-"></TextBlock>
                                                                    <TextBlock Text="{Binding INGRESO.CAMA.CELDA.SECTOR.DESCR}"></TextBlock>
                                                                    <TextBlock Text="{Binding INGRESO.CAMA.CELDA.ID_CELDA}"></TextBlock>
                                                                    <TextBlock Text="-"></TextBlock>
                                                                    <TextBlock Text="{Binding INGRESO.CAMA.ID_CAMA}"></TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn Header="Situación" Binding="{Binding ESTATUS_VISITA.DESCR, Converter={StaticResource Trimming}}"/>
                                                    <DataGridTextColumn Header="Relación" Binding="{Binding TIPO_REFERENCIA.DESCR, Converter={StaticResource Trimming}}"></DataGridTextColumn>
                                                </DataGrid.Columns>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDoubleClick" >
                                                        <i:InvokeCommandAction CommandParameter="{Binding ElementName=dgImputados1}" Command="{Binding dgImputadoCommand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </DataGrid>

                                            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3,0,2,0">
                                                <Label HorizontalAlignment="Center" Content=" Entregar&#10;Credencial" Padding="0"/>
                                                <Button  Width="50" Height="50"  ToolTip="Entregar Credencial" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding OnClick}" CommandParameter="EntregaPersona"  >
                                                    <Rectangle Width="20" Height="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_creditcard}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </Button>
                                            </StackPanel>


                                            <Image Grid.Column="2" Height="150" Source="{Binding ImagenIngreso}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"/>
                                        </Grid>
                                    </GroupBox>


                                </Grid>
                            </StackPanel>
                            <!--<Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Content="Padron de Visitas" Style="{DynamicResource DescriptionHeaderStyle}" />-->

                        </StackPanel>
                    </TabItem>
                </Controls:MetroAnimatedSingleRowTabControl>
            </Grid>
        </StackPanel>
    </AdornerDecorator>
</UserControl>
