                        </i:Interaction.Behaviors>
                    </TextBox>
                    <Label Grid.Column="1" Grid.Row="1" Content="Grupo familiar"></Label>
                    <ComboBox Grid.Column="1" Grid.Row="2" SelectedValuePath="Tag" SelectedValue="{ Binding IdGrupoFamiliarSecundario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }">
                        <ComboBoxItem Content="SELECCIONE" Tag=""></ComboBoxItem>
