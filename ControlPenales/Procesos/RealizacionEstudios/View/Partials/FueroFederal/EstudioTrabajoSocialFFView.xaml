                        </i:Interaction.Behaviors>
                    </TextBox>
                    <TextBlock TextWrapping="WrapWithOverflow" Grid.Column="4" Grid.Row="0" Text="Actualmente coopera el interno económicamente con la familia"></TextBlock>
                    <TextBox Grid.Column="4" MaxWidth="{ Binding ElementName=lblRe2, Path=ActualWidth}" Grid.Row="1" Text="{ Binding IdActualmenteCooperaEconoConFamilia, UpdateSourceTrigger=PropertyChanged}" CharacterCasing="Upper" MaxLength="100"></TextBox>
