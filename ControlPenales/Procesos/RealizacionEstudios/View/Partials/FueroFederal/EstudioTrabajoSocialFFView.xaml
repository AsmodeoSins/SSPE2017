                    <TextBox Grid.Column="5" MaxLength="100"  MaxWidth="{ Binding ElementName=lblRe2, Path=ActualWidth}" Grid.Row="1" Text="{ Binding TieneFondosAhorro, UpdateSourceTrigger=PropertyChanged}" CharacterCasing="Upper"></TextBox>
