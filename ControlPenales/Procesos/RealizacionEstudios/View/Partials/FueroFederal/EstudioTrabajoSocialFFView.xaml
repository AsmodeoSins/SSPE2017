                                <DataGridTextColumn Header="Estado civil" Binding="{ Binding ESTADO_CIVIL}"></DataGridTextColumn>
                                <DataGridTextColumn Header="escolaridad" Binding="{ Binding ID_ESTUDIO, Converter={ StaticResource ConvertirEscolaridd}}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Ocupación" Binding="{ Binding OCUPACION}"></DataGridTextColumn>
